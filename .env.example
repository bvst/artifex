# Artifex Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini Configuration (Future)
# GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude Configuration (Future)
# CLAUDE_API_KEY=your-claude-api-key-here

# Stability AI Configuration (Future)
# STABILITY_API_KEY=your-stability-api-key-here

# Default AI Provider (openai, gemini, claude, stability)
DEFAULT_AI_PROVIDER=openai

# Enable cost estimation display to users
ENABLE_COST_ESTIMATION=true

# API timeout in seconds
API_TIMEOUT_SECONDS=30

# Number of retry attempts for failed requests
API_RETRY_ATTEMPTS=3